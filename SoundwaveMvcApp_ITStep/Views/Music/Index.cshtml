@{
    ViewData["Title"] = "Music";
}
@model List<Song>

<h1 class="text-white">Track List</h1>
<div class="d-flex justify-content-between">
    <p class="text-white">You can manage tracks here</p>
    <p class="text-white">Tracks on Soundwave: @Model.Count</p>
</div>

<table class="table table-dark my-4">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">TrackUrl</th>
            <th scope="col">Genre</th>
            <th scope="col">Additional Tags</th>
            <th scope="col">Artist</th>
            <th scope="col">User</th>
            <th scope="col">Public</th>
            <th scope="col">Upload Date</th>
            <th scope="col" class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model)
        {
            <tr class="align-middle">
                <th scope="row">@song.Id</th>
                <td>@song.Title</td>
                <td>@(!string.IsNullOrEmpty(song.Description) ? song.Description : "-")</td>
                <td>@song.SongUrl</td>
                <td>@if(song.Genre?.Id == 1)
                    {
                        <span>-</span>
                    }
                    else
                    {
                        <span>@song.Genre?.Name</span>
                    }
                </td>
                <td>@(!string.IsNullOrEmpty(song.AdditionalTags) ? song.AdditionalTags : "-")</td>
                <td>@(!string.IsNullOrEmpty(song.ArtistName) ? song.ArtistName : "-")</td>
                <td>@song.User?.Username</td>
                <td>@song.IsPublic</td>
                <td>@song.UploadDate</td>
                <td class="text-center">
                    <a asp-controller="Music" asp-action="ArchiveSong" asp-route-id="@song.Id" class="btn btn-outline-light">
                        <i class="bi bi-archive-fill"></i>
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>

<div class="d-flex justify-content-between">
    <a asp-controller="Music" asp-action="Archive" class="btn btn-outline-light">
        <i class="bi bi-archive-fill"></i>
        <span>Archived Tracks</span>
    </a>
    <a asp-controller="Music" asp-action="Create" class="btn btn-outline-success">
        <span>Upload new track</span>
    </a>
</div>