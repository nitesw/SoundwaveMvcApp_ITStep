@{
    ViewData["Title"] = "Upload Track";
}
@model Track

<h1 class="text-white mb-4">Upload New Track</h1>

<form class="row g-3" method="post" asp-action="Create">
    <div class="col-12">
        <label asp-for=Title class="form-label text-white">Title <strong class="text-danger">*</strong></label>
        <input asp-for=Title type="text" maxlength="200" class="form-control" placeholder="Enter the title..." required>  
    </div>

    <div class="col-12">
        <label asp-for="TrackUrl" class="form-label text-white">TrackUrl <strong class="text-danger">*</strong></label>
        <input asp-for="TrackUrl" type="text" class="form-control" placeholder="Enter the track url..." required pattern="^(https?:\/\/)?([\da-z.-]+)\.([a-z.]{2,6})([/\w .-]*)*\/?$">
        <span asp-validation-for="TrackUrl" class="text-danger"></span>
    </div>

    
    <div class="col-5">
        <label asp-for=GenreId class="form-label text-white">Genre</label>
        <select asp-for=GenreId asp-items=@ViewBag.Genres class="form-select"></select>
    </div>
    <div class="col-5">
        <label asp-for=AdditionalTags class="form-label text-white">Additional Tags</label>
        <input asp-for=AdditionalTags type="text" maxlength="1000" class="form-control" placeholder="Enter additonal tags...">
    </div>
    <div class="col-2">
        <label asp-for=ArtistName class="form-label text-white">Artist</label>
        <input asp-for=ArtistName type="text" maxlength="100" class="form-control" placeholder="Enter the artist name...">
    </div>
    
    <div class="col-12 mb-3">
        <label asp-for=Description class="form-label text-white">Description</label>
        <textarea asp-for=Description maxlength="10000" placeholder="Describe your track..." class="form-control" rows="3"></textarea>
    </div>
 
    <div class="col-12">
        <div class="form-check">
            <input class="form-check-input" type="checkbox">
            <label class="form-check-label text-white">
                Public
            </label>
        </div>
    </div>

    <hr class="text-white" />
    <div class="col-6 text-white">
        <span><strong class="text-danger">*</strong> Required fields</span>
    </div>
    <div class="col-3">
        <a asp-action="Index" class="btn btn-outline-secondary w-100">Cancel</a>
    </div>
    <div class="col-3">
        <button type="submit" class="btn btn-outline-success w-100">Upload</button>
    </div>

    <input asp-for=UserId value="1" type="hidden" />
    <input asp-for=IsArchived value="false" type="hidden" />
    <input asp-for=UploadDate value="@DateTime.Now.Date" type="hidden" />
</form>